<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Online Learning and Testing System</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", false)
    </head>

    <body>
        <header>
            <div>
                <div>
                    <p>@Html.ActionLink("your logo here", "Index", "Home")</p>
                </div>
                <div>
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    <nav>
                        <ul id="menu">
                            @{
                                if (Roles.IsUserInRole("Administrator"))
                                {
                                    <li>@Html.ActionLink("View Users", "Users", "Admin")</li>
                                }
                                else if (Roles.IsUserInRole("Teacher"))
                                {
                                        
                                }
                                else if (Roles.IsUserInRole("User"))
                                {
                                    <li>@Html.ActionLink("View Surveys", "Surveys", "User")</li>
                                }
                            }       
                        </ul>
                    </nav>
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", false)
            <section>
                @RenderBody()
            </section>
        </div>
        <footer>
            <div>
                <div>
                    <p>&copy; @DateTime.Now.Year ELEKS, All rights reserved</p>
                </div>
            </div>
        </footer>
    </body>
</html>
